                                            <b:Interaction.Triggers>
                                                <b:DataTrigger
                                                    Binding="{Binding IsFound}"
                                                    Comparison="Equal"
                                                    Value="True">
                                                    <b:ChangePropertyAction PropertyName="Foreground" Value="{DynamicResource SuccessBrush}" />
                                                </b:DataTrigger>
                                                <b:DataTrigger
                                                    Binding="{Binding IsFound}"
                                                    Comparison="Equal"
                                                    Value="False">
                                                    <b:ChangePropertyAction PropertyName="Foreground" Value="{DynamicResource DangerBrush}" />
                                                </b:DataTrigger>
                                            </b:Interaction.Triggers>
                                        </TextBlock>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                                <d:TextBlock
                                    d:Text="0.0000000"
                                    FontSize="16"
                                    Foreground="{StaticResource SuccessBrush}">
                                    <b:Interaction.Triggers>
                                        <b:DataTrigger
                                            Binding="{Binding IsFound}"
                                            Comparison="Equal"
                                            Value="True">
                                            <b:ChangePropertyAction PropertyName="Foreground" Value="{DynamicResource SuccessBrush}" />
                                        </b:DataTrigger>
                                        <b:DataTrigger
                                            Binding="{Binding IsFound}"
                                            Comparison="Equal"
                                            Value="False">
                                            <b:ChangePropertyAction PropertyName="Foreground" Value="{DynamicResource DangerBrush}" />
                                        </b:DataTrigger>
                                    </b:Interaction.Triggers>
                                </d:TextBlock>
                            </ListBox>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
            <Grid Grid.Column="2">
                <Border
                    BorderBrush="{DynamicResource SecondaryBorderBrush}"
                    BorderThickness="1,1,1,1"
                    DataContext="{Binding CenterRectViewModel}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="55" />
