                            </Button>
                        </StackPanel>
                        <ScrollViewer Grid.Row="1">
                            <ListBox ItemsSource="{Binding TempImageList}" Style="{StaticResource StackPanelVerticalListBox}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel MaxHeight="100" Orientation="Horizontal">
                                            <Image
