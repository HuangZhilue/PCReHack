                                </d:StackPanel>
                            </ListBox>
                        </ScrollViewer>
                        <ScrollViewer Grid.Row="2">
                            <ListBox ItemsSource="{Binding MatchTemplateResults}" Style="{StaticResource StackPanelVerticalListBox}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            d:Text="0.0000000"
                                            FontSize="16"
