<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls">

    <Style
        x:Key="CustomMetroWindow"
        BasedOn="{StaticResource {x:Type controls:MetroWindow}}"
        TargetType="{x:Type controls:MetroWindow}">
        <Setter Property="SaveWindowPosition" Value="True" />
        <Setter Property="ShowTitleBar" Value="True" />
        <Setter Property="Height" Value="450" />
        <Setter Property="Width" Value="800" />
    </Style>
    <Style
        x:Key="TransparencyMetroWindow"
        BasedOn="{StaticResource CustomMetroWindow}"
        TargetType="{x:Type controls:MetroWindow}">
        <Setter Property="AllowsTransparency" Value="True" />
        <Setter Property="Background" Value="{x:Null}" />
    </Style>
    <Style
        x:Key="TopMostTransparencyMetroWindow"
        BasedOn="{StaticResource TransparencyMetroWindow}"
        TargetType="{x:Type controls:MetroWindow}">
        <Setter Property="Topmost" Value="True" />
    </Style>
    <Style
        x:Key="LowTitleHeightTopMostTransparencyMetroWindow"
        BasedOn="{StaticResource TopMostTransparencyMetroWindow}"
        TargetType="{x:Type controls:MetroWindow}">
        <Setter Property="ShowTitleBar" Value="True" />
        <Setter Property="TitleBarHeight" Value="15" />
    </Style>
</ResourceDictionary>
